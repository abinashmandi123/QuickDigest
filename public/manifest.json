{
    "manifest_version":3,
    "name":"Quick Digest",
    "version":"1.0",
    "description":"A quick AI-powered text summarization tool.",
    "permissions":[
        "contextMenus",
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "background":{
        "service_worker":"background.js",
        "type":"module"
    },
    "action":{
        "default_popup":"index.html",
        "default_icon":{
            "16":"quickdigest-16.png",
            "48":"quickdigest-48.png"
        }
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
    "icons":{
        "16":"quickdigest-16.png",
        "48":"quickdigest-48.png"
    }
}